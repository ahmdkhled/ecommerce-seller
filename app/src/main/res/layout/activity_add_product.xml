<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_nameLabel"
            android:text="name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/edit_text"
            app:layout_constraintBottom_toBottomOf="@id/edit_text"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/product_description"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/edit_text"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                 android:hint="enter your name"
                />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_priceLabel"
            android:text="price"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/price_text"
            app:layout_constraintBottom_toBottomOf="@id/price_text"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:layout_marginLeft="5dp" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/product_description"
            app:layout_constraintTop_toBottomOf="@id/edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/price_text"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="enter product price"
                android:inputType="numberDecimal"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stock"
            android:textSize="20sp"
            android:id="@+id/product_stockLabel"
            app:layout_constraintTop_toTopOf="@id/stock_text"
            app:layout_constraintBottom_toBottomOf="@id/stock_text"
            app:layout_constraintStart_toStartOf="@id/product_priceLabel" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/product_description"
            app:layout_constraintTop_toBottomOf="@id/price_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/stock_text"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="enter product stock" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:textSize="20sp"
            android:id="@+id/product_descriptionLabel"
            app:layout_constraintStart_toStartOf="@id/product_nameLabel"
            app:layout_constraintTop_toTopOf="@id/product_description"
            app:layout_constraintBottom_toBottomOf="@id/product_description"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/product_descriptionLabel"
            app:layout_constraintTop_toBottomOf="@id/stock_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/product_description"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="enter product description"
                android:inputType="text"
                android:layout_gravity="center"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_category"
            android:text="category"
            app:layout_constraintStart_toStartOf="@id/product_nameLabel"
            app:layout_constraintTop_toBottomOf="@id/product_description"
            android:textSize="20sp"
            />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/product_categorySpinner"
            app:layout_constraintStart_toStartOf="@id/price_text"
            app:layout_constraintTop_toBottomOf="@id/product_description"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="image"
            android:id="@+id/product_imageLabel"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/upload"
            app:layout_constraintBottom_toBottomOf="@id/upload"
            app:layout_constraintStart_toStartOf="@id/product_nameLabel"
            app:layout_constraintTop_toBottomOf="@id/product_category"
            />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#D31F1F"
           android:id="@+id/upload"
           android:textColor="#fff"
           android:text="upload"
           app:layout_constraintStart_toStartOf="@id/product_categorySpinner"
           app:layout_constraintTop_toBottomOf="@id/product_categorySpinner"
           android:layout_marginTop="5dp" />
        <Button
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Add Product"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>